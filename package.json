{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=george-burger-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy dist --project-name george-burger-menu",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply george-burger-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply george-burger-db --remote",
    "db:console:local": "wrangler d1 execute george-burger-db --local",
    "db:console:prod": "wrangler d1 execute george-burger-db --remote"
  },
  "dependencies": {
    "hono": "^4.9.10"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}